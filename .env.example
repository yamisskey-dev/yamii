# Navi 人生相談APIサーバー設定
# このファイルを .env にコピーして設定してください

# 個別設定項目（他の用途で使用される場合）
YAMII_DB_HOST=db
YAMII_DB_PORT=5432
YAMII_DB_NAME=navi
YAMII_DB_USER=navi_user
YAMII_DB_PASSWORD=your_secure_password_here  # docker-compose.ymlのPOSTGRES_PASSWORDと合わせてください

# データベース接続プール設定
YAMII_DB_POOL_SIZE=10
YAMII_DB_MAX_OVERFLOW=20
YAMII_DB_ECHO=false

# GEMINI API設定
GEMINI_API_KEY=your_gemini_api_key_here

# セキュリティ設定
YAMII_SECRET_KEY=your_secret_key_here
YAMII_ENCRYPTION_ENABLED=true

# ログ設定
YAMII_LOG_LEVEL=INFO
YAMII_LOG_FORMAT=json
LOG_LEVEL=INFO
LOG_FILE=logs/navi.log

# E2EEキー管理設定
YAMII_KEY_STORAGE_PATH=.navi_keys

# ==============================
# ボット機能設定（統合版）
# ==============================

# ボット機能を有効化するかどうか
ENABLE_MISSKEY_BOT=false

# === Navi API設定（共通） ===
YAMII_API_URL=http://localhost:8000
YAMII_API_TIMEOUT=30

# === ボット基本設定（共通） ===
BOT_NAME=navi
BOT_USERNAME=navi
BOT_SESSION_TIMEOUT=3600

# === ボット機能設定（共通） ===
BOT_ENABLE_DM=true
BOT_ENABLE_MENTIONS=true  
BOT_ENABLE_TIMELINE=false
BOT_ENABLE_GLOBAL_TIMELINE=false

# === 危機対応設定（共通） ===
BOT_CRISIS_HOTLINES=いのちの電話: 0570-783-556, こころの健康相談統一ダイヤル: 0570-064-556

# === Misskey固有設定 ===
# Misskeyインスタンス設定（ボット有効時必須）
MISSKEY_INSTANCE_URL=https://your-misskey-instance.com
MISSKEY_ACCESS_TOKEN=your_misskey_access_token_here
MISSKEY_BOT_USER_ID=your_bot_user_id